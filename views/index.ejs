<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>HOME</title>

  <link rel="stylesheet" href="/main.css" />
</head>

<body>
  <!-- HERO SECTION -->
  <h1>URL Shortener</h1>
  <form action="/shortUrls" method="post">
    <label for="fullUrl">URL </label>

    <input placeholder="https://" type="url" name="fullUrl" id="fullUrl" />
    <button type="submit">Shorten</button>
  </form>

  <!-- END HERO SECTION -->

  <!-- table -->
  <h2>SHORTENED LINKS</h2>
  <table class="center">
    <thead>
      <tr>
        <th>Full URL</th>
        <th>Short URL</th>
        <th>Clicks</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% shortUrls.forEach(shortUrl=> { %>
        <tr>
          <td>
            <a href="<%= shortUrl.full %>" target="_blank">
              <%= shortUrl.full %>
            </a>
          </td>
          <td>
            <a href="<%= shortUrl.short %>" target="_blank">/<%= shortUrl.short %></a>
          </td>
          <td>
            <%= shortUrl.clicks %>
          </td>
          <td>
            <form method="POST" action="/<%= shortUrl._id %>">
              <input type="hidden" name="_method" value="DELETE" />
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
    </tbody>
  </table>
</body>

</html>